{
  "plugins": [
    "stylelint-scss",
    "stylelint-order"
  ],
  "extends": [ "stylelint-config-standard", "stylelint-config-sass-guidelines" ],
  "rules": {
    "at-rule-no-unknown": null,
    "order/order": [
			"custom-properties",
			"declarations"
		],
		"order/properties-alphabetical-order": true,
    "max-nesting-depth": 3
  }
}
